    ViewData["Title"] = "About";
}

<style>
.about-section {
  margin-bottom: 30px;
}

.about-section h2 {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.about-section p {
  font-size: 18px;
  line-height: 1.5;
}
